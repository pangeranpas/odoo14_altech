<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="hide_pos_buttons" inherit_id="point_of_sale.POSActionButtons">
        <!-- Hide the price and discount buttons by adding the 'oe_hidden' class -->
        <xpath expr="//button[@id='button_discount']" position="attributes">
            <attribute name="class">oe_hidden</attribute>
        </xpath>
        <!-- <xpath expr="//button[@id='button_price']" position="attributes">
            <attribute name="class">oe_hidden</attribute>
        </xpath> -->
    </template>
</odoo>